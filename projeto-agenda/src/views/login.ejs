<%- include('./includes/head') %>
<%- include('./includes/navBar') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2">

      </div>

      <div class="col-lg-8 mi-5">
        <h1 class="text-center">Login Page</h1>
        <p class="text-center lead">Faça login ou crie sua conta</p>

        <%- include('includes/messenge'); %> 

        <div class="row">
          <div class="col-lg">
            <h4>Faça seu cadastro</h4>
            <small>Se você ainda não tem login clique aqui</small>
            <form method="POST" action="/login/register">
              <input type="hidden" name="_csrf" value="<%=csrfToken%>">
              <div class="form-group my-3">
                <label for="exampleInputEmail1">Email:</label>
                <input autocomplete="off" type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Escreva seu email">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Senha:</label>
                <input type="password" class="form-control" name="password" placeholder="Escreva sua senha">
              </div>
              <button type="submit" class="btn btn-primary">Criar conta</button>
            </form>
          </div>

          <div class="col-lg">
            <h4>Entrar no Sistema</h4>
            <small>Faça seu login aqui</small>
            <form method="POST" action="/login/login">
              <input type="hidden" name="_csrf" value="<%=csrfToken%>">
              <div class="form-group my-3">
                <label for="exampleInputEmail1">Email:</label>
                <input autocomplete="off" type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Escreva seu email">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Senha:</label>
                <input type="password" class="form-control" name="password" placeholder="Escreva sua senha">
              </div>
              <button type="submit" class="btn btn-primary">Entrar no sistema</button>
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>
<%- include('./includes/footer') %>